<% provide :title, t(".forgot_pass_title") %>

<div class="content-form-page col-md-offset-2 col-md-8">
  <h2><%= t ".forgot_pass" %></h2>

  <%= form_for resource, as: resource_name, url: password_path(resource_name),
    html: {method: :post},
    class: "form-horizontal form-without-legend" do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit t(".send_reset"), class: "btn btn-orange" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
