<% if @status == 200 %>
  $('.microposts').prepend('<%= escape_javascript render('posts/post',\
    post: @post, comment: @comments) %>');
  $('#post-form').modal('toggle');
  $('.show-errors-create').html('');
  $('.post-title').val('');
<% else %>
  $('.show-errors-create').html('');
  <% @post.errors.full_messages.each do |message| %>
    $('.show-errors-create').append('<li><%= message %></li>');
  <% end %>
<% end %>
