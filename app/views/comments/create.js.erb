<% if @status == 200 %>
  $('.list-comments-' + '<%= @post.id %>')
    .append('<%= escape_javascript render('comments/comment',comment: @comment,\
    post: @post) %>');
  $('.number-comments-<%= @post.id %>')
    .html('<%= escape_javascript render('comments/number_comments',\
    post: @post) %>');
  $('.comment-content-input').val('');
<% else %>
  alert('<%= t "comments.create.has_error" %>');
<% end %>
