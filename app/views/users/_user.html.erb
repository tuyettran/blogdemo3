<li class="user-li">
  <div class="user-block">
    <span class="col-md-2 text-center">
      <%= image_tag user.avatar.url, class: "avatar-user-list" %>
    </span>
    <div class="col-md-10">
      <h3><%= link_to user.full_name, user %></h3>
      <b><%= t ".email" %></b><%= user.email %><br/>
      <b><%= t ".gender" %></b><%= user.gender %><br/>
      <%= render "shared/stats", user: user %>
    </div>
    <div class="clearfix"></div>
  </div>
</li>
